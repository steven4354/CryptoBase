<div class="jumbotron">
  <h1 class="display-3">Your CryptoBase</h1>
  <p class="lead">Here's all your information on cryptocurrencies, click below to select coins, find news, and check prices</p>
  <hr class="my-4">
  <p class="lead">
    <a class="btn btn-primary" href="/logout" role="button">Logout here</a>
  </p>
</div>

<div class="row">
  <div class="col-sm-3 col-sm-offset-1">
    <div class="row">
      <div class="col-sm-12">
        <div class="list-group">
          <a href="#" class="list-group-item active">
                  Your Coins
                </a>
          {{#each userCoins as |coin|}}
            <div style="padding: 15px;" class="list-group-item">
              {{coin.name}} <strong class="text-success">${{coin.price_usd}}</strong>
              <form style="float:right;" action="/home/removecoin" method="post">
                <input name="coin" value= {{coin.id}} hidden/>
                <button type="submit" class="btn btn-danger btn-sm">-</button>
              </form>
            </div>
          {{/each}}
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <div class="list-group">
          <div class="list-group-item active">
            List of Avaialble Coins (click on the + to add to your list)
          </div>
          {{#each coinsList as |coin|}}
            <div style="padding: 15px;" class="list-group-item">
              {{coin.name}} <strong class="text-success">${{coin.price_usd}}</strong>
              <form style="float:right;" action="/home/addcoin" method="post">
                <input name="coin" value= {{coin.symbol}} hidden/>
                <button type="submit" class="btn btn-success btn-sm">+</button>
              </form>
            </div>
          {{/each}}
        </div>
      </div>
    </div>

  </div>
  <div class="col-sm-7">
    <div class="list-group">
      <a href="#" class="list-group-item active">
        <h4 class="list-group-item-heading">Real-time News on Your Coins</h4>
        <p class="list-group-item-text">Make sure to keep updated on your coins.</p>
      </a>
      {{#each articles as |article|}}
        <a href="{{article.url}}" class="list-group-item">
          <h4 class="list-group-item-heading">{{article.title}} </h4>
          <p class="list-group-item-text">{{article.description}}</p>
        </a>
      {{/each}}
    </div>
  </div>
</div>